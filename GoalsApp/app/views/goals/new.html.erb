<h1>Create Goal</h1>

<%= render "layouts/errors" %>

<form class="" action="/goals" method="post">
  <input type="hidden" name="authenticity_token" value="<%=form_authenticity_token%>">
  <label>Title</label>
  <input type="text" name="goal[title]" id="Title">
  <br>
  <label>private</label>
  <input type="radio" name="goal[private_goal]" id="private" value="true">
  <br>
  <label>public</label>
  <input type="radio" name="goal[private_goal]" id="private" value="false">

  <input type="submit" value="Create Goal">
</form>
